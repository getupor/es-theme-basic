<?xml version="1.0" encoding="UTF-8"?>

<theme>

	<formatVersion>7</formatVersion>
	
	<view name="system">

		<image name="randomGames01,randomGames02,randomGames03"
		
			extra="true"
			zIndex="812"
			linearSmooth="true"
			origin="1 1"
			color="ffffff"
			saturation="1.3"
			offsetX="0.3"
			
		>

            <pos ifSubset="randomGames:marquees">0.9875 0.9425</pos>
            <pos ifSubset="randomGames:thumbnails">0.9875 0.938</pos>

            <maxSize ifSubset="randomGames:marquees">0.22 0.15</maxSize>
            <maxSize ifSubset="randomGames:thumbnails">0.14 0.258</maxSize>

			<path ifSubset="randomGames:marquees">{random:marquee}</path>
			<path ifSubset="randomGames:thumbnails">{random:thumbnail}</path>

			<colorEnd ifSubset="randomGames:thumbnails">909090</colorEnd>
			<gradientType ifSubset="randomGames:thumbnails">vertical</gradientType>

			<shader ifSubset="shaders:on,randomGames:marquees">./../shaders/shadowLogo.glsl</shader>

		</image>
 
		<image name="randomGames01"
		
			extra="true"
			
		>
		
			<storyboard repeatAt="1">
			
                <animation property="offsetX"		from="0.3"			to="0.3"			duration="1000"			mode="linear"									/>
                <animation property="offsetX"		from="0.3"			to="0"				duration="250"			mode="easeOutCubic"			begin="1000"		/>
                <animation property="offsetX"		from="0"			to="0.3"			duration="250"			mode="easeInQuint"			begin="3100"		/>
                <animation property="offsetX"		from="0.3"			to="0.3"			duration="6650"			mode="linear"				begin="3350"		/>
				
           </storyboard>

		</image>
 
		<image name="randomGames02"
		
			extra="true"
			
		>

			<storyboard repeatAt="1">
			
                <animation property="offsetX"		from="0.3"			to="0.3"			duration="4350"			mode="linear"									/>
                <animation property="offsetX"		from="0.3"			to="0"				duration="250"			mode="easeOutCubic"			begin="4350"		/>
                <animation property="offsetX"		from="0"			to="0.3"			duration="250"			mode="easeInQuint"			begin="6450"		/>
                <animation property="offsetX"		from="0.3"			to="0.3"			duration="3300"			mode="linear"				begin="6700"		/>
				
            </storyboard>
			
		</image>
  
		<image name="randomGames03"
		
			extra="true"
		
		>
		
			<storyboard repeatAt="1">
			
                <animation property="offsetX"		from="0.3"			to="0.3"			duration="7700"			mode="linear"									/>
                <animation property="offsetX"		from="0.3"			to="0"				duration="250"			mode="easeOutCubic"			begin="7700"		/>
                <animation property="offsetX"		from="0"			to="0.3"			duration="200"			mode="easeInQuint"			begin="9800"		/>
				
            </storyboard>
			
		</image>
		
	</view>

</theme>
